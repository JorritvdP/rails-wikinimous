<div>
  <%= form_with model: @article do |f| %>
    <div class="p-3 mb-3">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="p-3 mb-3">
      <%= f.label :content %>
      <%= f.text_field :content %>
    </div>
    <div class="p3 mb-3">
      <%= f.submit %>
    </div>
  <% end %>
</div>
