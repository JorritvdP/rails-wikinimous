<h1 class="p-3 mb-3 w-75 m-auto text-center border border-dark rounded bg-dark text-white"><%= @article.title %></h1>

<div class="p-3 mb-3 w-75 m-auto text-center border border-dark rounded"><%= @article.content %></div>

<div class="p-3 w-50 m-auto text-center">
  <%= link_to '<i class="fa-solid fa-arrow-left fa-xl p-3 me-2"></i>'.html_safe, articles_path %>
  <%= link_to '<i class="fa-solid fa-pen-to-square fa-xl p-3 me-2"></i>'.html_safe, edit_article_path %>
  <%= link_to '<i class="fa-solid fa-trash-can fa-xl p-3 me-2"></i>'.html_safe, article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
</div>
